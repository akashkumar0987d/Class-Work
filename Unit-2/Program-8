//Write a c program to find sum of even no till 20 by using do while loop

#include <stdio.h>

int main()
{
    int n;
    printf("Enter the value of n: ");
    scanf("%d",&n);
    int i=0,sum=0;
    do
    {
        sum=sum+i;
        i+=2;
    }
    while(i<=n);
    printf("The sum  of even no till %d is %d",n,sum);
    return 0;
}
