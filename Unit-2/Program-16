// write a c program to find the sum and average of 20 numbers using array

#include <stdio.h>
int main()
{
    int array[20];
    int sum=0;
    float average;
    printf("Enter the numbers:  ");
    for(int i=0;i<20;i++)
    {
        scanf("%d",&array[i]);
        sum=sum+array[i];
    }
    printf("sum of 20 numbers is %d\n",sum);
    printf("Average of 20 numbers is %f",(float)sum/20);
    return 0;
}
