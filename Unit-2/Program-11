// Write  a c program to find the factorial of n using for loop

#include <stdio.h>

int main()
{
    int n;
    printf("Enter the value of n: ");
    scanf("%d",&n);
    int fact=1;
    
    // By the use of increment 
    
    for(int i=1;i<=n;i++)
    {
        fact*=i;
    }
    printf("The factorial of %d is %d\n",n,fact);
    
    // By the use of decrement
    fact =1 
    for(int i=n;i>0;i--)
    {
        fact*=i;
    }
    printf("The factorial of %d is %d",n,fact);
    
    return 0;
}
