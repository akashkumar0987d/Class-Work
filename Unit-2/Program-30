// Write a C program to find area AND perimeter of rectangle using functions. 

#include <stdio.h>
  
void area(float a, float b)
{
    float per;
    per=2*(a+b);
    float AR;
    AR=a*b;
    printf("perimeter is %f\n Area is %f",per,AR);
}

int main()
{
    float m,n;
    scanf("%f %f",&m,&n);
    area(m,n);
    
    return 0;
}
