// write a c program to find the sum of odd number till n

#include <stdio.h>

int main()
{
    int n;
    printf("Enter the value of n: ");
    scanf("%d",&n);
    int i=1,sum=0;
    for(i=1;i<=n;i+=2)
    {
        sum=sum+i;
    }
    printf("The sum  of odd numbers till %d is %d",n,sum);
    return 0;
}
