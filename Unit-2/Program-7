//Write a c program to find the sum of first n numbers using do while loop

#include <stdio.h>

int main()
{
    int n;
    printf("Enter the value of n: ");
    scanf("%d",&n);
    int i=1,sum=0;
    do
    {
        sum=sum+i;
        i++;
    }
    while(i<=n);
    printf("The sum  of first %d natural no is %d",n,sum);
    return 0;
}
