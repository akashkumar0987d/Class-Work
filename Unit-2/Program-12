// Write a c program to find the sum of even numbers till n using for loop

#include <stdio.h>

int main()
{
    int n;
    printf("Enter the value of n: ");
    scanf("%d",&n);
    int i,sum=0;
    for(i=0;i<=n;i+=2)
    {
        sum=sum+i;
    }
    printf("The sum  of even no till %d is %d",n,sum);
    return 0;
}

